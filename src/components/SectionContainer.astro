        <a 
            aria-label="Seguir enlace hacia Popular on Letterboxd"
            class={`text-[#99aabb] text-[11px] ${hoverClass}`}
            href="#"
            rel="noreferrer noopener"
            target="_blank"
        >
            {title}
        </a>
        <a 
            aria-label={`Seguir enlace hacia ver mÃ¡s ${title}`}
